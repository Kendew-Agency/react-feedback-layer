{
	"name": "@kendew-agency/react-feedback-layer",
	"version": "0.1.1",
	"description": "Drop-in React feedback layer for collecting contextual user feedback",
	"license": "MIT",
	"author": "Kendew Agency",
	"type": "module",
	"keywords": [
		"react",
		"feedback",
		"comments",
		"annotations",
		"collaboration",
		"ui",
		"component"
	],
	"homepage": "https://github.com/Kendew-Agency/react-feedback-layer",
	"bugs": {
		"url": "https://github.com/Kendew-Agency/react-feedback-layer/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Kendew-Agency/react-feedback-layer.git"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"import": "./dist/types.js",
			"require": "./dist/types.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^25.0.1",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@vitejs/plugin-react": "^4.2.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sass": "^1.97.1",
		"tsup": "^8.0.0",
		"typescript": "^5.4.0",
		"vite": "^5.2.0"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup  --watch",
		"playground": "vite playground",
		"playground:build": "vite build playground",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"lint": "biome lint .",
		"format": "biome format .",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "npm run typecheck && npm run build"
	},
	"dependencies": {
		"@j31/tryx-handler": "^0.3.0",
		"@radix-ui/react-slot": "^1.2.4"
	}
}
