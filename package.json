{
	"name": "@kendew/react-feedback-layer",
	"version": "0.1.0",
	"description": "Drop-in React feedback layer for collecting contextual user feedback",
	"license": "MIT",
	"author": "Kendew Agency",
	"type": "module",
	"homepage": "https://github.com/Kendew-Agency/react-feedback-layer",
	"bugs": {
		"url": "https://github.com/Kendew-Agency/react-feedback-layer/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kendew-Agency/react-feedback-layer.git"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "^25.0.1",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@vitejs/plugin-react": "^4.2.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tsup": "^8.0.0",
		"typescript": "^5.4.0",
		"vite": "^5.2.0"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup  --watch",
		"playground": "vite playground",
		"playground:build": "vite build playground",

		"test": "echo \"Error: no test specified\" && exit 1",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"lint": "biome lint .",
		"format": "biome format .",
		"typecheck": "tsc --noEmit"
	}
}
